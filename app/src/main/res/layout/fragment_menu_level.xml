<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:id="@+id/fragment__menu_relative_layout">
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/level_image_view"
    android:layout_margin="20dp"
    android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/playImageButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mine3_small"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:background="?android:selectableItemBackground"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>
    <ImageButton
        android:id="@+id/level_fragment_highscores_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_highscores"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/playImageButton"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>